# Resonance Application Environment Configuration
# Copy this file to .env and customize the values for your environment

# ===========================================
# PROVIDER API KEYS
# ===========================================

# AcoustID API Key (optional)
# Get your key from: https://acoustid.org/api-key
ACOUSTID_API_KEY=

# MusicBrainz User Agent (recommended)
MUSICBRAINZ_USER_AGENT=Resonance/1.0.0 (your-email@example.com)

# Discogs API Credentials (optional)
# DISCOGS_CONSUMER_KEY=
# DISCOGS_CONSUMER_SECRET=

# ===========================================
# APPLICATION SETTINGS
# ===========================================

# Tag writer backend: 'meta-json' (default) or 'mutagen'
RESONANCE_TAG_WRITER_BACKEND=meta-json

# Identification scoring version: 'v1' (default)
RESONANCE_IDENTIFY_SCORING_VERSION=v1

# Plan conflict policy: 'FAIL' (default)
RESONANCE_PLAN_CONFLICT_POLICY=FAIL

# ===========================================
# CACHE AND STORAGE
# ===========================================

# Cache directory (optional, defaults to system temp)
# RESONANCE_CACHE_DIR=/path/to/cache/directory

# Database path (optional, defaults to state.db in working directory)
# RESONANCE_DATABASE_PATH=/path/to/resonance/state.db

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================

# Enable debug logging
RESONANCE_DEBUG=false

# Test mode (affects some behaviors)
RESONANCE_TEST_MODE=false

# ===========================================
# NETWORK SETTINGS
# ===========================================

# Request timeout in seconds
RESONANCE_REQUEST_TIMEOUT=30

# Maximum retry attempts for network requests
RESONANCE_MAX_RETRIES=3

# ===========================================
# OFFLINE MODE
# ===========================================

# Enable offline mode (cache-only, no network calls)
RESONANCE_OFFLINE_MODE=false
